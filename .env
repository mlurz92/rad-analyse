# Server Konfiguration
PORT=3002
NODE_ENV=production
HOST=localhost

# Datenbank
DB_PATH=/srv/rad-analyse/server/database/database.sqlite

# Upload und Log Verzeichnisse
UPLOAD_PATH=/srv/rad-analyse/uploads
LOG_PATH=/srv/rad-analyse/logs

# Maximale Upload-Größe in Bytes (50MB)
MAX_UPLOAD_SIZE=52428800

# Log Level (debug, info, warn, error)
LOG_LEVEL=info

# Cache Konfiguration
CACHE_ENABLED=true
CACHE_TTL=3600

# Performance
MAX_CONNECTIONS=100
QUERY_LIMIT=200
